  <div class="mt-4">
    <button class="btn btn-light me-2 px-4 py-2 fw-semibold">ðŸ”— Short link</button>
    <button class="btn btn-outline-light px-4 py-2 fw-semibold" disabled>ðŸ“· QR Code</button>
  </div>
</div>

<!-- Shorten Link Form -->
<div class="form-section container">
  <div class="bg-white p-4 p-md-5 rounded-4 shadow" style="max-width: 960px; width: 100%;">
    <h4 class="fw-bold mb-3 text-center">Shorten a long link</h4>
    <p class="text-muted text-center mb-4">No credit card required.</p>

    <%= form_with model: @short_link, url: short_links_path, data: { turbo_frame: "form_response" }, class: "d-flex flex-column gap-3" do |f| %>
      <div class="input-group input-group-lg">
        <span class="input-group-text"><i class="bi bi-link-45deg"></i></span>
        <%= f.text_field :original_url, placeholder: "https://example.com/your-url", class: "form-control", autofocus: true %>
      </div>
      <%= f.submit "Get your link for free âžœ", class: "btn btn-primary btn-lg fw-semibold mt-2" %>
    <% end %>

    <!-- Káº¿t quáº£ -->
    <div class="mt-4">
      <turbo-frame id="form_response"></turbo-frame>
    </div>
  </div>
</div>

<script>
  function copyShortResult() {
    const input = document.getElementById("shortLinkDisplay");
    input.select();
    input.setSelectionRange(0, 99999);
    document.execCommand("copy");
    alert("Copied to clipboard!");
  }
</script>
