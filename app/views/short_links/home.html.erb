<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<!-- Custom style -->
<style>
  .shortLink-page {
    min-height: 100vh;
    background-color: #00193A;
    font-family: 'Helvetica Neue', sans-serif;
    display: flex;
    flex-direction: column;
  }

  .hero-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 60px;
    padding-bottom: 30px;
    color: white;
  }

  .form-section {
    display: flex;
    justify-content: center;
    padding-bottom: 60px;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding-top: 20px;
    }
  }
</style>

<!-- Hero Section -->
<div class="hero-section container text-center">
  <h1 class="display-5 fw-bold">Build stronger digital connections</h1>
  <p class="lead mt-3">
    Use Momly to shorten links and share clean URLs effortlessly.<br>
    Build, edit, and track everything â€” simple and free.
