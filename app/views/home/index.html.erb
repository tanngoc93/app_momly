<% if user_signed_in? || @guest_mode %>
  <!-- Custom style -->
  <style>
    .shortLink-page {
      min-height: 100vh;
      background-color: #00193A;
      font-family: 'Helvetica Neue', sans-serif;
      display: flex;
      flex-direction: column;
    }

    .hero-section {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding-top: 60px;
      padding-bottom: 30px;
      color: white;
    }

    .form-section {
      display: flex;
      justify-content: center;
      padding-bottom: 60px;
    }

    @media (max-width: 768px) {
      .hero-section {
        padding-top: 20px;
      }
    }
  </style>

  <!-- Hero Section -->
  <div class="hero-section container text-center">
    <h1 class="display-5 fw-bold">Build stronger digital connections</h1>
    <p class="lead mt-3">
      Use Momly to shorten links and share clean URLs effortlessly.<br>
      Build, edit, and track everything ‚Äî simple and free.
    </p>

    <div class="mt-4">
      <button class="btn btn-light me-2 px-4 py-2 fw-semibold">üîó Short link</button>
      <button class="btn btn-outline-light px-4 py-2 fw-semibold" disabled>üì∑ QR Code</button>
    </div>
  </div>

  <!-- Shorten Link Form -->
  <div class="form-section container">
    <div class="bg-white p-4 p-md-5 rounded-4 shadow" style="max-width: 960px; width: 100%;">
      <h4 class="fw-bold mb-3 text-center">Shorten a long link</h4>
      <p class="text-muted text-center mb-4">No credit card required.</p>

      <%= form_tag short_links_path, method: :post, data: { turbo_frame: "form_response" }, class: "d-flex flex-column gap-3" do %>
        <% unless user_signed_in? %>
          <%= hidden_field_tag :guest_token, signed_guest_token %>
        <% end %>

        <div class="input-group input-group-lg">
          <%= text_field_tag "short_link[original_url]", nil, placeholder: "https://example.com/your-url",
                class: "form-control", autofocus: true %>
        </div>

        <div class="form-check mt-2">
          <%= check_box_tag "short_link[publicly_visible]", "1", true, class: "form-check-input", id: "short_link_publicly_visible" %>
          <%= label_tag "short_link_publicly_visible", "Show on public page", class: "form-check-label text-muted" %>
        </div>

        <%= submit_tag "Get your link for free ‚ûú", class: "btn btn-primary btn-lg fw-semibold mt-2" %>
      <% end %>

      <!-- K·∫øt qu·∫£ -->
      <div class="mt-4">
        <turbo-frame id="form_response"></turbo-frame>
      </div>
    </div>
  </div>

  <script nonce="<%= content_security_policy_nonce %>">
    function copyShortResult() {
      const input = document.getElementById("shortLinkDisplay");
      const btn = input.nextElementSibling;

      input.select();
      input.setSelectionRange(0, 99999);
      navigator.clipboard.writeText(input.value).then(() => {
        const originalText = btn.innerText;

        btn.innerText = "Copied!";
        btn.classList.remove("btn-outline-success");
        btn.classList.add("btn-success");

        setTimeout(() => {
          btn.innerText = originalText;
          btn.classList.add("btn-outline-success");
          btn.classList.remove("btn-success");
        }, 1500);
      });
    }
  </script>
<% else %>
