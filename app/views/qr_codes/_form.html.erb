<%= form_with url: qr_code_path, method: :post, data: { turbo_frame: "form_response" }, class: "d-flex flex-column gap-3" do %>
  <div class="input-group input-group-lg">
    <%= text_field_tag :url, nil, placeholder: "https://example.com", class: "form-control", autofocus: true %>
  </div>
  <%= submit_tag "Generate", class: "btn btn-primary btn-lg fw-semibold mt-2" %>
<% end %>
