<div class="d-flex flex-column align-items-center justify-content-center text-center" style="min-height: 80vh; padding-top: 20px;">
  <div style="max-width: 420px; width: 100%;">
    <h2 class="fw-bold text-white mb-2">Reset your password üîÅ</h2>
    <p class="text-secondary mb-4">Enter a new one below</p>

    <div class="bg-white rounded-4 shadow-sm overflow-hidden">
      <div class="p-4 p-md-5 d-grid gap-3">

        <% if resource.errors.any? %>
          <div class="alert alert-danger text-start mb-3">
            <strong class="d-block mb-2">Oops! Something went wrong:</strong>
            <ul class="mb-0 ps-3">
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: resource, url: password_path(resource_name), class: "d-grid gap-3" do |f| %>
          <%= f.hidden_field :reset_password_token, value: params[:reset_password_token] %>

          <%= f.password_field :password, placeholder: "New password", class: "form-control form-control-lg rounded-3 shadow-sm" %>
          <%= f.password_field :password_confirmation, placeholder: "Confirm new password", class: "form-control form-control-lg rounded-3 shadow-sm" %>

          <%= f.submit "Change password", class: "btn btn-primary btn-lg fw-semibold rounded-3 shadow-sm" %>
        <% end %>

        <div class="mt-3 text-center small">
          <%= link_to "Back to login", new_user_session_path, class: "text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</div>
