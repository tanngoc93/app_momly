<div class="container my-5">
  <div class="mx-auto" style="max-width: 720px;">
    <h2 class="fw-bold text-white text-center mb-1">Your Profile Settings</h2>
    <p class="text-secondary text-center mb-4">Edit your details or update your token anytime</p>

    <div class="bg-white rounded-4 shadow-sm p-4 p-md-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <% if resource && resource.errors.any? %>
          <div class="alert alert-danger text-start mb-3">
            <strong class="d-block mb-2">There were some errors:</strong>
            <ul class="mb-0 ps-3">
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-danger text-start mb-3">
            <strong class="d-block mb-2">Oops! Something went wrong:</strong>
            <p class="mb-0"><%= flash[:alert] %></p>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-semibold" %>
          <%= f.email_field :email, class: "form-control form-control-lg rounded-3 shadow-sm" %>
        </div>

        <div class="mb-3">
          <%= f.label :name, class: "form-label fw-semibold" %>
          <%= f.text_field :name, class: "form-control form-control-lg rounded-3 shadow-sm" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "New password", class: "form-label fw-semibold" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Leave blank if unchanged", class: "form-control form-control-lg rounded-3 shadow-sm" %>
        </div>

        <div class="mb-4">
          <%= f.label :current_password, class: "form-label fw-semibold" %>
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control form-control-lg rounded-3 shadow-sm" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Update", class: "btn btn-primary btn-lg fw-semibold rounded-3 shadow-sm" %>
        </div>
      <% end %>

      <hr class="my-4">

      <div class="text-start">
        <label class="fw-bold mb-0">Your API Token</label>
        <%= button_to "ðŸ” Generate New Token",
                reset_users_api_token_path,
                method: :post,
                form_class: "d-inline",
                data: { turbo_confirm: "Are you sure you want to generate a new API token?" },
                class: "btn btn-link fw-bold mb-2 text-danger p-0 text-decoration-none align-baseline" %>

        <div class="input-group input-group-lg" data-controller="clipboard">
          <input type="text"
                 id="apiToken"
                 class="form-control font-monospace"
                 value="<%= resource.api_token %>"
                 readonly
                 data-clipboard-target="source">
          <button class="btn btn-outline-secondary"
                  style="min-width: 100px;"
                  type="button"
                  data-action="clipboard#copy">
            <span class="clipboard-label">Copy</span>
          </button>
        </div>

        <div class="mt-4">
          <label class="fw-bold mb-2 d-block">Example API Request</label>
          <div class="position-relative">
            <pre class="bg-light border rounded-3 p-3 mb-0 text-break overflow-auto">
              <code id="curlCommand"
                    class="clipboard-source"
                    style="display: block; padding-top: 1.25rem;"><%= raw <<~CURL
                      curl -X POST #{request.base_url}/api/v1/short_links \\
                        -H "Authorization: Bearer #{resource.api_token}" \\
                        -H "Content-Type: application/json" \\
                        -d '{"original_url":"https://example.com/product/abc"}'
                    CURL
                  %></code>
            </pre>

            <button class="btn btn-sm btn-outline-secondary position-absolute top-0 end-0 m-2"
                    style="min-width: 100px;"
                    data-controller="clipboard"
                    data-action="clipboard#copy"
                    data-clipboard-text="<%= h <<~CURL %>
                      curl -X POST #{request.base_url}/api/v1/short_links \
                        -H "Authorization: Bearer #{resource.api_token}" \
                        -H "Content-Type: application/json" \
                        -d '{"original_url":"https://example.com/product/abc"}'
                    CURL
                    ">
              <span class="clipboard-label">Copy</span>
            </button>
          </div>

          <small class="text-muted d-block mt-2">
            Use this token in the Authorization header of your API requests.
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
