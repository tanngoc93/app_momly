<div class="container my-5">
  <div class="mx-auto" style="max-width: 720px;">
    <h2 class="fw-bold text-white text-center mb-1">Your Profile Settings</h2>
    <p class="text-secondary text-center mb-4">Edit your details or update your token anytime</p>

    <div class="bg-white rounded-4 shadow-sm p-4 p-md-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <% if resource && resource.errors.any? %>
          <div class="alert alert-danger text-start mb-3">
            <strong class="d-block mb-2">There were some errors:</strong>
            <ul class="mb-0 ps-3">
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-danger text-start mb-3">
            <strong class="d-block mb-2">Oops! Something went wrong:</strong>
            <p class="mb-0"><%= flash[:alert] %></p>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-semibold" %>
          <%= f.email_field :email, class: "form-control form-control-lg rounded-3 shadow-sm" %>
        </div>

        <div class="mb-3">
          <%= f.label :name, class: "form-label fw-semibold" %>
          <%= f.text_field :name, class: "form-control form-control-lg rounded-3 shadow-sm" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "New password", class: "form-label fw-semibold" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Leave blank if unchanged", class: "form-control form-control-lg rounded-3 shadow-sm" %>
        </div>

        <div class="mb-4">
          <%= f.label :current_password, class: "form-label fw-semibold" %>
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control form-control-lg rounded-3 shadow-sm" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Update", class: "btn btn-primary btn-lg fw-semibold rounded-3 shadow-sm" %>
        </div>
      <% end %>

      <hr class="my-4">

      <div class="text-start">
        <label class="fw-bold mb-2 d-block">Your API Token</label>
        <div class="input-group input-group-lg">
          <input type="text"
                 id="apiToken"
                 class="form-control font-monospace"
                 value="<%= resource.api_token %>"
                 readonly>
          <button class="btn btn-outline-secondary"
                  type="button"
                  onclick="copyApiToken(this)">Copy</button>
        </div>

        <div class="mt-4">
          <label class="fw-bold mb-2 d-block">Example API Request</label>
          <div class="position-relative">
            <pre class="bg-light border rounded-3 p-3 mb-0 text-break overflow-auto"><code id="curlCommand" style="display: block; padding-top: 1.25rem;"><%= raw <<~CURL
                curl -X POST #{request.base_url}/api/v1/short_links \\
                  -H "Authorization: Bearer #{resource.api_token}" \\
                  -H "Content-Type: application/json" \\
                  -d '{"original_url":"https://example.com/product/abc"}'
              CURL
              %></code></pre>
            <button class="btn btn-sm btn-outline-secondary position-absolute top-0 end-0 m-2" onclick="copyCurlCommand(this)">Copy</button>
          </div>
          <small class="text-muted d-block mt-2">Use this token in the Authorization header of your API requests.</small>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function copyApiToken(btn) {
    const input = document.getElementById("apiToken");
    input.select();
    input.setSelectionRange(0, 99999);
    navigator.clipboard.writeText(input.value).then(() => {
      const original = btn.innerText;
      btn.innerText = "Copied!";
      btn.classList.remove("btn-outline-secondary");
      btn.classList.add("btn-success");
      setTimeout(() => {
        btn.innerText = original;
        btn.classList.add("btn-outline-secondary");
        btn.classList.remove("btn-success");
      }, 1500);
    });
  }

  function copyCurlCommand(btn) {
    const code = document.getElementById("curlCommand").innerText;
    navigator.clipboard.writeText(code).then(() => {
      const original = btn.innerText;
      btn.innerText = "Copied!";
      btn.classList.remove("btn-outline-secondary");
      btn.classList.add("btn-success");
      setTimeout(() => {
        btn.innerText = original;
        btn.classList.add("btn-outline-secondary");
        btn.classList.remove("btn-success");
      }, 1500);
    });
  }
</script>

