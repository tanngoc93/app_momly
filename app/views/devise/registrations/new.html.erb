<div class="d-flex flex-column align-items-center justify-content-center text-center" style="min-height: 80vh; padding-top: 20px;">
  <div style="max-width: 420px; width: 100%;">
    <h2 class="fw-bold text-white mb-2">Create an account ðŸŽ‰</h2>
    <p class="text-secondary mb-4">Join Momly for free</p>
    <div class="bg-white rounded-4 shadow-sm overflow-hidden">
      <div class="p-4 p-md-5 d-grid gap-3">
        <% if resource && resource.errors.any? %>
          <div class="alert alert-danger text-start mb-3">
            <strong class="d-block mb-2">Oops! Something went wrong:</strong>
            <ul class="mb-0 ps-3">
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-danger text-start mb-3">
            <strong class="d-block mb-2">Oops! Something went wrong:</strong>
            <p class="mb-0"><%= flash[:alert] %></p>
          </div>
        <% end %>

        <%= form_with model: resource, url: registration_path(resource_name), class: "d-grid gap-3" do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control form-control-lg rounded-3 shadow-sm" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control form-control-lg rounded-3 shadow-sm" %>
          <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control form-control-lg rounded-3 shadow-sm" %>
          <%= recaptcha_tags %>
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg fw-semibold rounded-3 shadow-sm" %>
        <% end %>

        <div class="mt-1">
          <%= button_to user_google_oauth2_omniauth_authorize_path,
              method: :post,
              form: { "data-turbo" => "false" },
              class: "btn btn-outline-danger btn-lg w-100 d-flex align-items-center justify-content-center gap-2" do %>
            <i class="bi bi-google fs-5"></i>
            <span class="fw-semibold">Sign up with Google</span>
          <% end %>
        </div>

        <div class="mt-3 text-center small">
          <%= link_to "Already have an account?", new_user_session_path, class: "text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</div>
