<div class="d-flex flex-column align-items-center justify-content-center text-center" style="min-height: 80vh; padding-top: 20px;">
  <div style="max-width: 420px; width: 100%;">
    <h2 class="fw-bold text-white mb-2">Welcome back ðŸ‘‹</h2>
    <p class="text-secondary mb-4">Log in to your Momly account</p>

    <div class="bg-white rounded-4 shadow-sm overflow-hidden">
      <div class="p-4 p-md-5 d-grid gap-3">

        <% if flash[:alert] %>
          <div class="alert alert-danger text-start mb-3">
            <strong class="d-block mb-2">Oops! Something went wrong:</strong>
            <p class="mb-0"><%= flash[:alert] %></p>
          </div>
        <% end %>

        <%= form_with scope: :user, url: session_path(:user), class: "d-grid gap-3" do |f| %>
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control form-control-lg rounded-3 shadow-sm" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control form-control-lg rounded-3 shadow-sm" %>
          <%= f.submit "Log in", class: "btn btn-primary btn-lg fw-semibold rounded-3 shadow-sm" %>
        <% end %>

        <%= button_to user_google_oauth2_omniauth_authorize_path,
            method: :post,
            form: { "data-turbo" => "false" },
            class: "btn btn-outline-danger btn-lg w-100 d-flex align-items-center justify-content-center gap-2" do %>
          <%= image_tag "google.svg", alt: "Google icon", width: 20, height: 20, class: "flex-shrink-0" %>
          <span class="fw-semibold">Sign in with Google</span>
        <% end %>

        <div class="mt-3 text-center small">
          <%= link_to "Sign up", new_user_registration_path, class: "text-decoration-none" %>
          <span class="mx-2">Â·</span>
          <%= link_to "Forgot password?", new_user_password_path, class: "text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</div>
